<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_layout"
        tools:context=".MainActivity">
    <ImageView
            android:id="@+id/img_circle"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/circle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="0"
            android:layout_width="42dp"
            android:layout_height="55dp"
            android:id="@+id/txt_count"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/img_coin_count"
            app:layout_constraintBottom_toTopOf="@+id/img_coin_count" app:layout_constraintVertical_bias="0.533"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/img_coin_count"
            app:layout_constraintHorizontal_bias="1.0"/>
    <ImageView
            android:layout_width="53dp"
            android:layout_height="55dp" app:srcCompat="@drawable/ic_coin_dollar"
            android:id="@+id/img_coin_count" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:contentDescription="TODO"/>


</androidx.constraintlayout.widget.ConstraintLayout>